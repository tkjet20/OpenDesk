<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="b1">
    <div class="container body-content" style="align-items:center">
        @RenderBody()
        <p style="font-size:100px;text-align:center;color:white"><img id="logo" src="~/Content/Images/UPS-Logo.png"> Open Desk</p>

        <div class="col-md-13 text-center">
            @Html.ActionLink("Donate Your Desk", "Donate", "Home", new { @id = "HomeNav", @class = "btn btn-warning3" })<br />
            @Html.ActionLink("Reserve a Desk", "Reserve", "Home", new { @id = "HomeNav", @class = "btn btn-warning3" })<br />
            @Html.ActionLink("Current Reservation", "LookUp", "Home", new { @id = "HomeNav", @class = "btn btn-warning3" })<br />
            @Html.ActionLink("Floor Maps", "FloorMap", "Home", new { @id = "HomeNav", @class = "btn btn-warning3" })
        </div>
        <hr />
        <footer>
            <p style="text-align:center; font-size: 10px">
                Copyright &copy; @DateTime.Now.Year United Parcel Service of America, Inc. All  Rights Reserved.
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>